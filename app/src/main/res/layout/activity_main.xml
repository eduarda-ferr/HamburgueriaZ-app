<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/main_layout"
    android:background="#FFFFFF">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#673AB7"
        app:title="HamburgueriaZ"
        app:titleTextColor="#FFFFFF" />

    <ImageView
        android:id="@+id/imageLogo"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginBottom="17dp"
        android:scaleType="fitCenter"
        android:src="@drawable/logo_hamburgueria"
        android:contentDescription="Logo Hamburgueria"
        android:background="#FFA726"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                style="@style/EstiloTexto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="18dp"
                android:text="Faça seu pedido!"
                android:textSize="15sp"/>

            <EditText
                android:id="@+id/editNome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nome"
                android:inputType="textPersonName" />

            <CheckBox
                android:id="@+id/checkboxBacon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bacon" />

            <CheckBox
                android:id="@+id/checkboxQueijo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Queijo" />

            <CheckBox
                android:id="@+id/checkboxOnion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Onion Rings" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quantidade"
                style="@style/EstiloTexto"
                android:textStyle="bold"
                android:layout_marginTop="16dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">

                <Button
                    android:id="@+id/btnMenos"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/botao_bordas"
                    android:text="−" />

                <TextView
                    android:id="@+id/textQuantidade"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="0"
                    android:textSize="18sp" />

                <Button
                    android:id="@+id/btnMais"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/botao_bordas"
                    android:text="+" />
            </LinearLayout>

            <TextView
                android:id="@+id/textResumo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Resumo do pedido"
                style="@style/EstiloTexto"
                android:textStyle="bold"
                android:layout_marginTop="16dp" />

            <TextView
                android:id="@+id/textPreco"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="R$ 0,00"
                style="@style/EstiloTexto"
                android:textSize="20sp"
                android:textStyle="bold"
                tools:ignore="HardcodedText" />

            <Button
                android:id="@+id/btnEnviar"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:background="@drawable/botao_bordas"
                android:text="FAZER PEDIDO" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>
